{
  "name": "ai-site-pilot",
  "version": "0.5.1",
  "description": "AI chat widget that can control and navigate your website. Works with any AI model via OpenRouter.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.mjs",
      "require": "./dist/api/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.mjs",
      "require": "./dist/tools/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsup && cp src/styles.css dist/styles.css",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "chat",
    "chatbot",
    "site-pilot",
    "openrouter",
    "navigation",
    "react",
    "nextjs",
    "streaming",
    "tools",
    "function-calling"
  ],
  "author": "Ben.Builds",
  "license": "MIT",
  "funding": {
    "type": "ko_fi",
    "url": "https://ko-fi.com/xBenJamminx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xBenJamminx/ai-site-pilot"
  },
  "homepage": "https://github.com/xBenJamminx/ai-site-pilot#readme",
  "bugs": {
    "url": "https://github.com/xBenJamminx/ai-site-pilot/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "ai-site-pilot": "^0.4.3",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "react-markdown": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
